{
  "name": "nextup-quality-tools",
  "version": "1.0.0",
  "description": "Event management application with enterprise-grade testing infrastructure",
  "scripts": {
    "lint": "eslint \"*.{js,gs}\" \"src/**/*.{js,gs}\" \"scripts/**/*.js\" --max-warnings 0 --no-error-on-unmatched-pattern",
    "lint:fix": "eslint \"*.{js,gs}\" \"src/**/*.{js,gs}\" \"scripts/**/*.js\" --fix --no-error-on-unmatched-pattern",
    "format": "prettier --write \"**/*.{js,gs,ts,tsx,json,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,gs,ts,tsx,json,md,html}\"",
    "test": "npm run test:unit",
    "test:unit": "jest --passWithNoTests --runInBand --testPathPattern=tests/unit",
    "test:integration": "jest --passWithNoTests --runInBand --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "verify": "node verify-deployment.js --project src --ci",
    "build": "node scripts/package-apps-script.js",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,gs,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
